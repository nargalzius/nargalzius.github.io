			pre.
				<!-- REQUIRED SCRIPTS -->
				<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
				<script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/latest/TweenMax.min.js"></script>
				<script src="http://nargalzius.github.io/ajax/joystick/dom_loader/latest/domLoader.js"></script>
				
				<!-- CONTENT -->
				<div id="container">
				<img id="spinner" src="http://nargalzius.github.io/img/joystick/spinner.gif">
				<div id="content">
					<div id="placeholder">EXPANDED CONTENT HERE</div>
				</div>
				</div>
				
				<!-- INITIALIZE -->    
				<script>
					$(document).ready(dom.init);
				</script>

